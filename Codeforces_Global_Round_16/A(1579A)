#include<bits/stdc++.h>

using namespace std;

int main(){
    long long a;
    cin>>a;
    for (long long i = 0; i < a; i++)
    {
        long long b,c;
        cin>>b>>c;
        long long d=b/2;
        if (b%2==0)
        {
           d-=1; 
        }
        
        b-=d;
        cout<<c/b<<endl;
    }
    
}
