#include<bits/stdc++.h>

using namespace std;

int main(){
    long long a;
    cin>>a;
    for(long long i=0;i<a;i++){
        vector<long long>b(3,0);
        string s;
        cin>>s;
        for (long long j = 0; j < s.size(); j++)
        {
            b[s[j]-'A']++;
        }
        if (b[0]>b[1])
        {
            cout<<"NO"<<endl;
            continue;
        }
        b[1]-=b[0];
        if (b[1]!=b[2])
        {
            cout<<"NO"<<endl;
            continue;
        }
        cout<<"YES"<<endl;
    }
}
